<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CreateShoppingList">

    <TableLayout
        android:id="@+id/addorderinTable"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <TableRow android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1">

            <TextView android:id="@+id/catTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:gravity="center"
                android:text="Type"
                android:textColor="@color/Black"
                android:textSize="20sp"/>

            <TextView android:id="@+id/productTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:gravity="center"
                android:text="Brand"
                android:textColor="@color/Black"
                android:textSize="20sp"/>

            <TextView android:id="@+id/quantityTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:gravity="center"
                android:text="Color"
                android:textColor="@color/Black"
                android:textSize="20sp"/>

            <TextView android:id="@+id/unitTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:gravity="center"
                android:text="Size"
                android:textColor="@color/Black"
                android:textSize="20sp"/>

        </TableRow>

        <TableRow>
            <Button android:id="@+id/addMoreItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#7785ff"
                android:text="Add More Items"
                android:textSize="24dp"/>

        </TableRow>

        <TableRow>
            <Button android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#b43757"
                android:text="Submit"
                android:textSize="24dp"/>

        </TableRow>

    </TableLayout>

</ScrollView>